<Page x:Class="fitnessApp.WeightPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:fitnessApp"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="400"
      Title="WeightPage"
      Background="AliceBlue">

    <Grid Loaded="Form1_Load">
        <Label x:Name="label" Content="Димамика Вашего Веса" HorizontalAlignment="Left" Height="26" Margin="10,2,0,0" VerticalAlignment="Top" Width="280"/>
        <DatePicker x:Name="DateWieght" HorizontalAlignment="Left" Margin="10,254,0,0" VerticalAlignment="Top" Width="134"/>
        <TextBox x:Name="textBox" HorizontalAlignment="Left" Height="23" Margin="170,254,0,0" TextWrapping="Wrap" Text="Ваш вес" VerticalAlignment="Top" Width="103"/>
        <Button x:Name="button" Content="Ввести" HorizontalAlignment="Left" Margin="314,254,0,0" VerticalAlignment="Top" Width="60" Click="button_Click"/>
        <Label x:Name="label1" Content="кг." HorizontalAlignment="Left" Margin="278,254,0,0" VerticalAlignment="Top"/>
        <Label x:Name="labelResult" Content="У Вас нет записей за выбраную дату!" HorizontalAlignment="Left" Margin="0,33,0,0" VerticalAlignment="Top" Height="200" Width="400"/>

    </Grid>
</Page>
